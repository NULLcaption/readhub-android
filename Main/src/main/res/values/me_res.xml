<resources>
    <!-- some dimen from material design guideline -->

    <dimen name="fragment_me_margin">16dp</dimen>

    <dimen name="fragment_me_title_margin_top">16dp</dimen>
    <dimen name="fragment_me_title_textsize">@dimen/text_size_14</dimen>

    <dimen name="fragment_me_items_margin_top">8dp</dimen>
    <dimen name="fragment_me_items_height">50dp</dimen>
    <dimen name="fragment_me_items_textsize">@dimen/text_size_16</dimen>

    <dimen name="fragment_me_right_arrow_size">24dp</dimen>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- Active thumb color & Active track color(30% transparency)
            switch 打开时的拇指按钮的颜色 轨迹颜色默认为30%这个颜色 -->
        <item name="colorControlActivated">@color/colorAccent</item>
        <!-- Inactive thumb color switch关闭时的拇指按钮的颜色 -->
        <item name="colorSwitchThumbNormal">@color/secondary_text</item>
        <!-- Inactive track color(30% transparency) switch关闭时的轨迹的颜色  30%这个颜色 -->
        <item name="android:colorForeground">@color/primary</item>
        <!--使用方法：
        在布局文件中给需要自定义控件中增加app:theme="@style/MySwitch"-->
    </style>
</resources>
