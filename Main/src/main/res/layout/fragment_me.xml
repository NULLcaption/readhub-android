        <TextView
            android:id="@+id/aboutReadhub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fragment_me_margin"
            android:layout_marginRight="@dimen/fragment_me_margin"
            android:layout_marginTop="@dimen/fragment_me_margin"
            android:text="@string/menu_key_readhub"
            android:textColor="#969696"
            android:textSize="@dimen/fragment_me_title_textsize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/aboutReadhubFunc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_me_items_height"
            android:layout_marginTop="@dimen/fragment_me_title_margin_top"
            android:background="@color/card_background_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aboutReadhub"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_key_readhub_company"
            android:textColor="#000000"
            android:textSize="@dimen/fragment_me_items_textsize"
            app:layout_constraintStart_toStartOf="@+id/aboutReadhub"
            app:layout_constraintTop_toTopOf="@+id/aboutReadhubFunc"
            app:layout_constraintBottom_toBottomOf="@+id/aboutReadhubFunc"/>

        <ImageView
            android:layout_width="@dimen/fragment_me_right_arrow_size"
            android:layout_height="@dimen/fragment_me_right_arrow_size"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            app:layout_constraintEnd_toEndOf="@id/aboutReadhub"
            app:layout_constraintBottom_toBottomOf="@+id/aboutReadhubFunc"
            app:layout_constraintTop_toTopOf="@+id/aboutReadhubFunc"/>

        <View
            android:id="@+id/aboutReadhubWeb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_me_items_height"
            android:layout_marginTop="@dimen/fragment_me_items_margin_top"
            android:background="@color/card_background_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aboutReadhubFunc"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_key_readhub_web"
