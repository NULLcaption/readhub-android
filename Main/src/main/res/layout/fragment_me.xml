            app:layout_constraintTop_toTopOf="@+id/aboutReadhubWeb"
            app:layout_constraintBottom_toBottomOf="@+id/aboutReadhubWeb"/>

        <ImageView
            android:layout_width="@dimen/fragment_me_right_arrow_size"
            android:layout_height="@dimen/fragment_me_right_arrow_size"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            app:layout_constraintEnd_toEndOf="@id/aboutReadhub"
            app:layout_constraintBottom_toBottomOf="@+id/aboutReadhubWeb"
            app:layout_constraintTop_toTopOf="@+id/aboutReadhubWeb"/>

        <TextView
            android:id="@+id/aboutApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_me_title_margin_top"
            android:text="@string/menu_key_app"
            android:textColor="#969696"
            android:textSize="@dimen/fragment_me_title_textsize"
            app:layout_constraintStart_toStartOf="@+id/aboutReadhub"
            app:layout_constraintTop_toBottomOf="@+id/aboutReadhubWeb" />

        <View
