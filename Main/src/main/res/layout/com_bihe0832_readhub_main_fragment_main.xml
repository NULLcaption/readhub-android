<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <FrameLayout
        android:id="@+id/app_main_main_fragment_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/framework_toolbar_height"
        android:layout_height="match_parent"/>

    <com.bihe0832.readhub.main.BottomBar
        android:id="@+id/app_main_main_fragment_bottomBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/framework_toolbar_height"
        android:layout_gravity="bottom"/>

    <ImageView
        android:layout_width="match_parent"
        android:background="@drawable/com_bihe0832_bottombar_shadow_up"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/framework_toolbar_height"
        android:layout_height="wrap_content"/>
</FrameLayout>