            app:layout_constraintTop_toTopOf="@+id/aboutAppTopicViewType"
            app:layout_constraintBottom_toBottomOf="@+id/aboutAppTopicViewType"/>

        <TextView
            android:id="@+id/aboutAppTopicViewTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="列表"
            android:textColor="#000000"
